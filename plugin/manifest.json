{
    "name": "TUTORIAL",
    "version": "1.0",
    "description": "Tutorial navigation",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "downloads",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://sites.google.com/*"
            ],
            "all_frames": true,
            "js": [
                "tester.js"
            ]
        }
    ],
    "manifest_version": 2
}